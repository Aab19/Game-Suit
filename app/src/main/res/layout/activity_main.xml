<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitlePaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:rotation="-15"
        android:text="@string/kertas"
        android:textAllCaps="false"
        android:textColor="#B3FF5722"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitleScissor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="76dp"
        android:rotation="-15"
        android:text="@string/gunting"
        android:textAllCaps="false"
        android:textColor="#E68BC34A"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitleRock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="110dp"
        android:rotation="-15"
        android:text="@string/batu"
        android:textAllCaps="false"
        android:textColor="#B39C27B0"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/playerOneWrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleRock">

        <TextView
            android:id="@+id/tvTitleOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pemain_1"
            android:textColor="#2196F3"
            android:textSize="26sp"
            android:textStyle="bold" />

        <!--        <androidx.cardview.widget.CardView-->
        <!--            android:id="@+id/crd"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginTop="16dp"-->
        <!--            app:cardBackgroundColor="@colors/bgSelected"-->
        <!--            app:cardCornerRadius="8dp"-->
        <!--            app:cardElevation="0">-->

        <!--            <ImageView-->
        <!--                android:id="@+id/imgRock"-->
        <!--                android:layout_width="90dp"-->
        <!--                android:layout_height="90dp"-->
        <!--                android:contentDescription="@string/batu"-->
        <!--                app:srcCompat="@drawable/batu" />-->
        <!--        </androidx.cardview.widget.CardView>-->

        <ImageView
            android:id="@+id/imgRock"
            android:tag="imgRock"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_round"
            android:contentDescription="@string/batu"
            android:padding="4dp"
            app:srcCompat="@drawable/batu" />

        <ImageView
            android:id="@+id/imgPaper"
            android:tag="imgPaper"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_round"
            android:contentDescription="@string/kertas"
            android:padding="4dp"
            app:srcCompat="@drawable/kertas" />

        <ImageView
            android:id="@+id/imgScissor"
            android:tag="imgScissor"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_round"
            android:contentDescription="@string/gunting"
            android:padding="4dp"
            app:srcCompat="@drawable/gunting" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvVersus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="24dp"
        android:rotation="-15"
        android:text="@string/versus"
        android:textColor="#FF0000"
        android:textSize="80sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/playerOneWrapper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/playerComWrapper" />

    <LinearLayout
        android:id="@+id/playerComWrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleRock">

        <TextView
            android:id="@+id/tvTitleCom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/com"
            android:textColor="#2196F3"
            android:textSize="26sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgComRock"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_round"
            android:contentDescription="@string/batu"
            android:padding="4dp"
            app:srcCompat="@drawable/batu" />

        <ImageView
            android:id="@+id/imgComPaper"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_round"
            android:contentDescription="@string/kertas"
            android:padding="4dp"
            app:srcCompat="@drawable/kertas" />

        <ImageView
            android:id="@+id/imgComScissor"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_round"
            android:contentDescription="@string/gunting"
            android:padding="4dp"
            app:srcCompat="@drawable/gunting" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgRefresh"
        android:tag="imgRefresh"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/refresh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/refresh" />

</androidx.constraintlayout.widget.ConstraintLayout>